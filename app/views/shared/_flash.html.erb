<%
notice ||= flash[:notice]
alert ||= flash[:alert]
%>

<div id="flash">
  <% if notice %>
    <div role="alert" class="flex items-center justify-center border-2 border-black bg-main py-4 sm:px-8 sm:py-5 px-4 font-heading text-sm md:text-base">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
      </svg>

      <p><%= sanitize notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div role="alert" class="flex items-center justify-center border-2 border-black bg-bg py-4 sm:px-8 sm:py-5 px-4 font-heading text-sm md:text-base">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
      </svg>

      <p><%= sanitize alert %></p>
    </div>
  <% end %>
</div>
