<div class="flex items-center justify-center w-full p-5 min-h-screen max-h-full">
  <div class="not-prose flex flex-col items-center justify-center z-[15] relative border-2 mb-5 border-black bg-fuchsia-100 bg-[radial-gradient(#cacbce_1px,transparent_1px)] px-10 py-20 shadow-base [background-size:16px_16px] m750:px-5 m750:py-10">
    <div class="flex flex-col items-center">
      <%= image_tag @game.image_link, class: 'w-20 h-20 object-cover mb-5', alt: 'thumbnail' %>
      <h1 class="text-3xl font-bold"><%= @game.name %></h1>
    </div>
    <div class="mx-10 mt-5">
      <input class=
        "w-96 border-black border-2 p-2.5 focus:outline-none focus:shadow-[2px_2px_0px_rgba(0,0,0,1)] focus:bg-[#FFA6F6] active:shadow-[2px_2px_0px_rgba(0,0,0,1)] rounded-md"
        placeholder="Enter your <%= @game.name.titleize %> ID here" id="game-id-input"
        />
    </div>
    <div class="grid grid-cols-3 gap-4 mt-5">
      <%= render "products/products", products: @game.products %>
    </div>
  </div>
</div>